<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.qhacks.var_mapper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NavARAI"
            android:textAlignment="center"
            android:textSize="45sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Select your downloaded map"
        android:textAlignment="center"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/main_showmap_lv"
        android:layout_width="match_parent"
        android:layout_height="352dp" />

    <Button
        android:id="@+id/main_downloadnewmap_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download New Map"
        android:textSize="25sp" />

</LinearLayout>
