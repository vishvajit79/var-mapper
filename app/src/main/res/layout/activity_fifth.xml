<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.qhacks.var_mapper.FifthActivity">

    <TextView
        android:id="@+id/fifth_mallname_txt"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:text="QHacks"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How would you like to be guided?"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/fifth_live_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live-video"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fifth_still_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Still-photos"
        android:textStyle="bold" />
</LinearLayout>
