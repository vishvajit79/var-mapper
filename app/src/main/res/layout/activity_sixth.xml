<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.qhacks.var_mapper.SixthActivity">

    <TextView
        android:id="@+id/fifth_mallname_txt"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:text="QHacks"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where would you like to go?"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/sixth_storename_txt"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Enter store name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sixth_find_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>
